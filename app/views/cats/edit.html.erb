<div class="jumbotron">
    <h1 class="text-center">Edit your Cat<%= @cat.name.nil? ? '' : ': '+@cat.name %></h1>
</div>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <%= bootstrap_form_for @cat, :action => cat_path, :method => 'PUT' do |f| %>
            <!-- <div class="form-group"> -->
            <%= f.text_field :name, :placeholder => "Enter your cat's name", :value => @cat.name %>
            <%= f.text_field :breed, :placeholder => "Enter your cat's breed", :value => @cat.breed %>
            <%= f.text_area :description, :value => @cat.description %>
            <!-- </div> -->
            <%= f.primary %> <input type="reset" class="btn btn-warning">
        <% end %>
    </div>
</div>